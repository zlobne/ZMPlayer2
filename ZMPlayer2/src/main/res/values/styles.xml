<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/zmp_orange</item>
    </style>

    <style name="ButtonBorderless" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ButtonBorderless.NoClick" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:animateOnClick">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Text" >
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.Big">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Big.Italic">
        <item name="android:textStyle">italic</item>
    </style>

</resources>
